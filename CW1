#include <stdio.h>
#include <stdlib.h>
#include <math.h>

double summ(int);
double summ(int N)
{
	int i;
	double res1=1, res2=1;
	for(i=1;i<=N;i+=2)
	{
		res1 = 1/i * res1;
		res2 += res1;
	}
	return res2;
}

double dell(int);
double dell(int N)
{
	double a=1.0;
	a=N/a+1;
	N-=1;
	while (N>=1)
	{
		a=N/a+1;
		N-=1;
	}
	a=1/a;
	return a;
}

	
		

int main()
{
	double e = exp(1.0), p = acos(-1.0), result=0, accuracy,total=1;
	int N=1;
	//total = sqrt((e * p)/2.0);
	printf("input accuracy = "); scanf("%f", &accuracy);
	while (fabs(total - result) > accuracy)
	{
		total=result;
		result = summ(N) + dell(N);
		N+=1;
		
	}
	printf("total  = %f\nresult = %f\niterations = %d",total, result, N);
	return 0;
	}
